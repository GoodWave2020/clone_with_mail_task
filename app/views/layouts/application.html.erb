<!DOCTYPE html>
<html>
  <head>
    <title>CloneWithMailTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'bootstrap_override', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <% if logged_in? %>
      <nav class="navbar navbar-light bg-info">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
              <span class="sr-only">Bootstrap</span>
              <span class="icon-bar bg-{danger}"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to pictures_path do %>
              <div><%= image_tag "logo_other.png", class: "navbar_logo text-center" %></div>
            <% end %>
          </div>
          <div id="gnavi" class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li>
                  <%= link_to user_path(@current_user.id) do %>
                    <%= image_tag @current_user.user_image.thumb.url, class: "icon" %>
                    : <%= @current_user.name  %>
                  <% end %>
               </li>
                <li><%= link_to "Index", pictures_path %></li>
                <li><%= link_to 'New Picture', new_picture_path %></li>
                <li><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
            </ul>
          </div>
        </div>
      </nav>
      <% end %>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key} text-center") %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
