<h1 class="text-center"><%= @user.name %><%= I18n.t("activerecord.attributes.favorite.s_favorite") %></h1>
<div class="row">
  <% @user.favorite_pictures.each do |picture| %>
    <div class="col-lg-3 col-md-6 col-sm-12 text-center">
      <div class="favorite_articles">
        <div class="user_post panel panel-default">
          <div class="post_contents panel-body">
            <div class="panel-heading">
              <%=image_tag picture.user.user_image.thumb.url, class: "icon" %>
              <%= picture.user.name %>
            </div>
            <%=image_tag picture.image.thumb.url %>
            <%= picture.content %><br>
            <%= link_to I18n.t("helpers.select.show"), picture %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
